{"manifest_version":2,
"name":"PlavorMindTools",
"author":"[http://exit.plavormind.tk:81/page/User:PlavorSeol PlavorSeol]",

"descriptionmsg":"plavormindtools-description",
"license-name":"AGPL-3.0-or-later",
"type":"other",
"url":"https://github.com/PlavorMind/PlavorMindTools",
"version":"2.0",

"AutoloadClasses":
  {"PlavorMindToolsHooks":"hooks.php"},
"AvailableRights":
  ["editprotected-admin",
  "editprotected-autoconfirmed",
  "editprotected-bureaucrat",
  "editprotected-moderator",
  "editprotected-steward",
  "editprotected-user"],
"config":
  {"PMTEnabledTools":
    {"description":"Array of enabled tools",
    "value":[]},
  "PMTEnglishSystemUsers":
    {"description":"Whether to always use English usernames for system users",
    "value":false},
  "PMTMBoxCSSExemptSkins":
    {"description":"Array of skins to not apply message box CSS",
    "value":
      ["plavorbuma"]
    },
  "PMTPlavorMindMessages":
    {"description":"Whether to replace some messages with PlavorMind-specific messages",
    "value":false}
  },
"Hooks":
  {"BeforePageDisplay":"PlavorMindToolsHooks::onBeforePageDisplay",
  "MessageCache::get":"PlavorMindToolsHooks::onMessageCache_get",
  "TitleIsAlwaysKnown":"PlavorMindToolsHooks::onTitleIsAlwaysKnown"},
"MessagesDirs":
  {"PlavorMindTools":
    ["i18n/main",
    "i18n/pmtmsg/abusefilter-systemusers",
    "i18n/pmtmsg/babel",
    "i18n/pmtmsg/babel-systemusers",
    "i18n/pmtmsg/core",
    "i18n/pmtmsg/core-systemusers"]
  },
"requires":
  {"MediaWiki":">=1.35"},
"ResourceFileModulePaths":
  {"localBasePath":"resources",
  "remoteExtPath":"PlavorMindTools/resources"},
"ResourceModules":
  {"plavormindtools_liberty_fix":
    {"styles":
      {"liberty_fix.css":
        {"media":"screen"}
      }
    },
  "plavormindtools_messagebox":
    {"styles":
      {"messagebox.css":
        {"media":"screen"}
      }
    }
  }
}
